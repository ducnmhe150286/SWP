@model SWP.Models.Product

<form asp-action="NewProduct" method="post" enctype="multipart/form-data">
    <div class="container mt-3">
        <div class="row">
            <div class="">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Tạo mới sản phẩm</h5>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="ProductName" class="form-label"> Tên sản phẩm</label>
                                    <input asp-for="ProductName" class="form-control" required pattern="^(?!\s*$).+" title="Tên sản phẩm không được chỉ chứa dấu cách" />
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="BrandId" class="form-label">Nhãn hiệu</label>
                                    <select asp-for="BrandId" class="form-control">
                                        @foreach (var brand in ViewBag.Brand)
                                        {
                                            <option value="@brand.BrandId">@brand.BrandName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="BrandId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Mô tả</label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Giá</label>
                                    <input asp-for="Price" class="form-control" type="number" min="0" required step="0.01" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label">Số lượng</label>
                                    <input asp-for="Quantity" class="form-control" type="number" min="0" required oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/^0+/, '')" pattern="\d+" title="Số lượng phải là số nguyên không âm" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Danh mục</label>
                                    <select asp-for="CategoryId" class="form-control">
                                        @foreach (var category in ViewBag.Category)
                                        {
                                            <option value="@category.CategoryId">@category.CategoryName</option>
                                        }
                                    </select>                                    
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="IsSale" class="form-label">Khuyến mại</label>
                                    <input asp-for="IsSale" class=" form-control" />
                                    <span asp-validation-for="IsSale" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Trạng thái</label>
                                    <select asp-for="Status" class="form-control">
                                        <option value="1" selected >Hoạt động</option>
@*                                        <option value="2">Hết hàng</option>
*@                                        <option value="0">Ngừng hoạt động</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label name="imageFiles" class="form-label">Ảnh sản phẩm</label>
                            <input name="imageFiles" type="file" class="form-control" multiple required accept="image/*" onchange="validateFileType(this)" />
                            <span name="imageFiles" class="text-danger"></span>
                        </div>
                        <div class="mb-3 text-end">
                            <button type="submit" class=" btn btn-primary">Tạo mới</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
</form>
<script>
    function validateFileType(input) {
        const validImageTypes = ["image/jpeg", "image/png", "image/gif"];
        const files = input.files;

        for (let i = 0; i < files.length; i++) {
            const fileType = files[i].type;

            if (!validImageTypes.includes(fileType)) {
                alert("Chỉ chấp nhận file hình ảnh (JPEG, PNG, GIF).");
                input.value = ""; 
                return;
            }
        }
    }
</script>
