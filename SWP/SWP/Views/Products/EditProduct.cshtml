@model SWP.Models.Product

<form asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
    <div class="container mt-3">
        <div class="row">
            <div class="">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Cập nhật sản phẩm</h5>
                        <h5 style="color: red;">@ViewData["ErrorMessage"]</h5>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="ProductName" class="form-label"> Tên sản phẩm<span class="required-star">*</span></label>
                                    <input asp-for="ProductName" class="form-control" value="@ViewBag.Product.ProductName" required pattern="^(?!\s*$).+" title="Tên sản phẩm không được chỉ chứa dấu cách" />
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="BrandId" class="form-label">Nhãn hiệu<span class="required-star">*</span></label>
                                  <select asp-for="BrandId" class="form-control">
                                        @foreach (var brand in ViewBag.Brands)
                                        {
                                            <option value="@brand.BrandId" selected="@(brand.BrandId == ViewBag.Product.BrandId)">@brand.BrandName</option>
                                        }
                                    </select>


                                    <span asp-validation-for="BrandId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="IsSale" class="form-label">Khuyến mại</label>
                                    <input asp-for="IsSale" class=" form-control" />
                                    <span asp-validation-for="IsSale" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Giá<span class="required-star">*</span></label>
                                    <input asp-for="Price" class="form-control" type="text"  value="@ViewBag.Product.Price" required />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label">Số lượng<span class="required-star">*</span></label>
                                    <input asp-for="Quantity" class="form-control" value="@ViewBag.Product.Quantity" type="number" min="0" required oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/^0+/, '')" pattern="\d+" title="Số lượng phải là số nguyên không âm"  />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Danh mục<span class="required-star">*</span></label>
                                    <select asp-for="CategoryId" class="form-control">
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.CategoryId" selected="@(category.CategoryId == ViewBag.Product.CategoryId)">@category.CategoryName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label name="ColorId" class="form-label">Màu sắc</label>
                                    <select name="ColorId" class="form-control">
                                        <option value="">-- Chọn màu sắc --</option>
                                        
                                        @foreach (var color in ViewBag.Color)
                                        {
                                                    <option value="@color.ColorId" selected="@(color.ColorId == ViewBag?.ProductDetail?.ColorId)">@color.ColorName</option>
                                               
                                        }
                                    </select>
                                    <span name="ColorId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label name="SizeId" class="form-label">Kích thước</label>
                                    <select name="SizeId" class="form-control">
                                        <option value="">-- Chọn kích thước --</option>
                                        @foreach (var size in ViewBag.Size)
                                        {
                                            <option value="@size.SizeId" selected="@(size.SizeId == ViewBag?.ProductDetail?.SizeId)">@size.SizeName</option>

                                        }
                                    </select>

                                    <span name="SizeId" class="text-danger"></span>
                                </div>
                            </div>
                           
                        </div>
                        <div class="row">
                            <div class="col-6">
                               
                                 <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Mô tả chung</label>
                                    <input asp-for="Description" class="form-control"  value=@ViewBag.Product.Description></input>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                               <div class="mb-3">
                                <label asp-for="Status" class="form-label">Trạng thái</label>
                                <select asp-for="Status" class="form-control">
                                        <option value="1" selected="@(ViewBag.Product.Status == 1)">Hoạt động</option>
@*                                        <option value="2" selected="@(ViewBag.Product.Status == 2)">Hết hàng</option>
*@                                        <option value="0" selected="@(ViewBag.Product.Status == 0)">Ngừng hoạt động</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>


                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label name="Feature" class="form-label">Mô tả tính năng</label>
                                    <textarea name="Feature" class="form-control">@ViewBag?.ProductDetail?.Feature</textarea>
                                    <span name="Feature" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label name="Attributes" class="form-label">Mô tả đặc điểm</label>
                                    <textarea name="Attributes" class="form-control">@ViewBag?.ProductDetail?.Attributes</textarea>
                                    <span name="Attributes" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                       <div class="mb-3">
                            <div class="mb-3">
                                @if (ViewBag.Product.ProductImages != null)
                                {
                                    foreach (var image in ViewBag.Product.ProductImages)
                                    {
                                        <div class="row">
                                            <div class="col-3">

                                            </div>
                                            <div class="col-9">

                                            </div>

                                        </div>
                                        <label class="form-label">Ảnh sản phẩm <span class="required-star">*</span></label>

                                        <!-- Display the image -->
                                        <img src="/Images/@image.Path" alt="Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />

                                        <!-- Hidden input to store the path (for display purposes) -->
                                        <input type="text" class="form-control" value="@image.Path" readonly style="display: none;" />

                                        <!-- Button to trigger file input -->
                                        <button type="button" class=" ms-2 btn btn-primary" onclick="showFileInput(this)">Sửa ảnh</button>

                                        <!-- Input file (initially hidden) -->
                                        <input name="imageFiles" type="file" class="form-control mt-3" style="display: none;" accept="image/*" onchange="validateFileType(this)" />

                                        <span name="imageFiles" class="text-danger"></span>
                                    }
                                }
                            </div>

                            <script>
                                function showFileInput(button) {
                                    // Get the sibling file input
                                    var fileInput = button.nextElementSibling;

                                    // Show/hide the file input
                                    if (fileInput.style.display === 'none') {
                                        fileInput.style.display = 'block';
                                    } else {
                                        fileInput.style.display = 'none';
                                    }
                                }
                            </script>



                            <input asp-for="ProductId" value="@ViewBag.Product.ProductId" type="hidden" class="form-control" />


                        <div class="mb-3 text-end">
                            <button type="submit" class=" btn btn-primary">Cập nhật</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</form>
<script>
    function validateFileType(input) {
        const validImageTypes = ["image/jpeg", "image/png", "image/gif"];
        const files = input.files;

        for (let i = 0; i < files.length; i++) {
            const fileType = files[i].type;

            if (!validImageTypes.includes(fileType)) {
                alert("Chỉ chấp nhận file hình ảnh (JPEG, PNG, GIF).");
                input.value = "";
                return;
            }
        }
    }
</script>
<style>
    .required-star {
        color: red;
    }
</style>