@model IEnumerable<SWP.Models.User>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<section class="">
    <div class="container">
        <div class="row">
            <!-- sidebar -->
            <div class="col-lg-3">
                <!-- Collapsible wrapper -->

            </div>
            <!-- sidebar -->
            <!-- content -->
            <div class="col-lg-9">
                <header class="d-sm-flex align-items-center border-bottom mb-4 pb-3">
                    <div class="ms-auto">
                        <div class="btn-group shadow-0 border">
                            <a asp-controller="Signup" asp-action="Index" class="btn btn-primary shadow-0 me-1">Create user</a>
                        </div>
                    </div>
                </header>

                <div class="row">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6 d-flex">
                                <div class="card w-100 my-2 shadow-2-strong">
                                    <a asp-controller="Users" asp-action="Index" asp-route-userId="@item.UserId">
                                        <img src="@item.Image" class="card-img-top" />
                                    </a>
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex flex-row">
                                            <h5 class="mb-1 me-1"></h5>
                                            <span class="text-danger"><s></s></span>
                                        </div>
                                        <p class="card-text">@item.LastName</p>
                                        <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
                                            <a asp-controller="Users" asp-action="Edit" asp-route-userId="@item.UserId" class="btn btn-primary shadow-0 me-1">Edit</a>
                                            <a asp-controller="Users" asp-action="Delete" asp-route-userId="@item.UserId" class="btn btn-danger shadow-0 me-1">Delete</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }
                    }

                    <hr />

                    <!-- Pagination -->
                    <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
                        <ul class="pagination">
                            @if (ViewBag.currentPage != 0)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="Categories" asp-action="Index" asp-route-currentPage="@(ViewBag.currentPage - 1)" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            }
                            @for (int i = 0; i <= ViewBag.NumberOfPages; i++)
                            {
                                <li class="page-item "><a class="page-link" asp-controller="Categories" asp-action="Index" asp-route-currentPage="@i">@i</a></li>

                            }
                            @if (ViewBag.currentPage < ViewBag.NumberOfPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="Categories" asp-action="Index" asp-route-currentPage="@(ViewBag.currentPage + 1)" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            }   

                        </ul>
                    </nav>
                    <!-- Pagination -->
                </div>
            </div>
        </div>
</section>
