
@model SWP.Dto.RegisterModel
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SWP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SWP.styles.css" asp-append-version="true" />
</head>
<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Đăng ký tài khoản</h2>

                            @{
                                var message = ViewData["message"];
                                var message1 = ViewData["message1"];
                            }
                            <p style="color:red">@message</p>
                            <p style="color:green">@message1</p>

                            <form asp-controller="Auth" asp-action="Register" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" for="form3Example1m">Họ <span class="required-star">*</span></label>
                                            <span id="firstNameError" asp-validation-for="FirstName" class="text-danger"></span>
                                            <input type="text" asp-for="FirstName" class="form-control form-control-lg" />
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" for="form3Example1n">Tên <span class="required-star">*</span></label>
                                            <span id="lastNameError" asp-validation-for="LastName" class="text-danger"></span>
                                            <input type="text" asp-for="LastName" class="form-control form-control-lg" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example3cg">SĐT <span class="required-star">*</span></label>
                                    <span id="phoneNumberError" asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    <input type="text" asp-for="PhoneNumber" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example3cg">Email <span class="required-star">*</span></label>
                                    <span id="emailError" asp-validation-for="Email" class="text-danger"></span>
                                    <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example4cg">Mật khẩu <span class="required-star">*</span></label>
                                    <span id="passwordError" asp-validation-for="Password" class="text-danger"></span>
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example4cdg">Xác nhận mật khẩu <span class="required-star">*</span></label>
                                    <span id="confirmPasswordError" asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button id="registerButton" type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Đăng ký
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Đã có tài khoản? <a href="Index" class="fw-bold text-body"><u>Đăng nhập tại đây</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .required-star {
        color: red;
    }
</style>

