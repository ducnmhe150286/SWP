<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <div class="mb-4">
                                <h5>Quên mật khẩu?</h5>
                                <p class="mb-2">
                                    Nhập email bạn đã đăng ký vào đây!
                                </p>
                            </div>
                            @{
                                var message = ViewData["message"];

                            }

                            <p style="color:red">@message</p>
                            <form asp-controller="Auth" asp-action="ForgotPassword">

                                <div class="mb-3">
                                    <label for="email"> Email <span class="required-star">*</span></label>
                                    <input type="email" id="email" class="form-control" name="email" placeholder="Nhập Email của bạn"
                                           required="">
                                </div>
                                <div class="mb-3 d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        Gửi mã xác nhận
                                    </button>
                                </div>
                                <span>Bạn muốn đăng nhập? <a href="Index">Đăng nhập</a></span>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .required-star {
        color: red;
    }
</style>