@{
}
@model SWP.Models.Category

<h2>CẬP NHẬT DANH MỤC</h2>

@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.HiddenFor(model => model.CategoryId)
        @Html.LabelFor(model => model.CategoryName)
        @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status)
        @Html.DropDownListFor(model => model.Status, new List<SelectListItem>
    {
    new SelectListItem { Text = "Hoạt động", Value = "1"},
    new SelectListItem { Text = "Không hoạt động", Value = "0" }
    }, "Chọn trạng thái", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
}