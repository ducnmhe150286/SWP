@{
}
@model List<Category>



<!-- Nút thêm mới ở đầu danh sách -->
<!-- Index.cshtml -->

<h2 class="product-category-heading">QUẢN LÝ DANH MỤC SẢN PHẨM</h2>

<div class="custom-container">
    <a asp-action="AddCategory">Thêm mới</a>
</div>


@if (Model != null && Model.Any())
{
    <style>
        .product-category-heading {
            color: #333; /* Màu chữ */
            font-family: 'Arial', sans-serif; /* Font chữ */
            font-size: 24px; /* Kích thước chữ */
            font-weight: bold; /* Độ đậm của chữ */
            text-transform: uppercase; /* Chuyển chữ thành chữ in hoa */
            margin-bottom: 20px; /* Khoảng cách dưới */
            border-bottom: 2px solid #333; /* Đường gạch chân */
            padding-bottom: 5px; /* Khoảng cách từ chữ đến đường gạch chân */
        }

        .custom-container {
            text-align: right; /* Căn phải nội dung bên trong */
            margin-top: 10px; /* Khoảng cách từ trên xuống */
        }

            .custom-container a {
                color: #fff; /* Màu chữ */
                background-color: #007bff; /* Màu nền */
                padding: 10px 20px; /* Kích thước nút */
                text-decoration: none; /* Loại bỏ gạch chân chữ */
                border-radius: 5px; /* Bo góc */
            }

                .custom-container a:hover {
                    background-color: #0056b3; /* Màu nền khi di chuột qua */
                }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn-group {
            display: flex;
            gap: 5px;
        }

        .btn {
            padding: 8px 12px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
        }

        .btn-warning {
            background-color: #ffc107;
            color: #212529;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
        }

        .close {
            cursor: pointer;
        }

        .pagination {
            display: inline-block;
            margin-top: 20px; /* Điều chỉnh khoảng cách giữa danh sách và nút phân trang */
        }

            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                transition: background-color .3s;
                border: 1px solid #ddd;
                font-size: 16px; /* Điều chỉnh kích thước chữ */
            }

                .pagination a.active {
                    background-color: #4CAF50;
                    color: white;
                    border: 1px solid #4CAF50;
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                }
    </style>

    <table>
        <thead>
            <tr>

                <th>Tên Danh Mục</th>

                <th>Trạng Thái</th>
                <th>Ngày Tạo</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>

                    <td>@category.CategoryName</td>
                    <td>
                        @if (category.Status == 1)
                        {
                            <p>Hoạt Động</p>
                        }
                        else
                        {
                            <p>Không Hoạt Động</p>
                        }
                    </td>
                    <td>@(category.CreatedDate.HasValue ? category.CreatedDate.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Action Buttons">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">Cập nhật</a>
                            <button type="button" class="btn btn-danger delete-button" data-toggle="modal" data-target="#deleteModal-@category.CategoryId">Xóa</button>
                        </div>
                    </td>
                </tr>

                <!-- Delete Modal -->
                <div class="modal" id="deleteModal-@category.CategoryId">
                    <div class="modal-content">
                        <span class="close" data-dismiss="modal">&times;</span>
                        <p>
                            Bạn có chắc là muốn xóa danh mục này?
                        </p>
                        <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" method="post">
                            <button type="submit" class="btn btn-danger">Xóa</button>
                        </form>
                    </div>
                </div>
            }
        </tbody>
    </table>
    <!-- Nút phân trang -->
    <div class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize })">&laquo;</a>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <a href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })" class="@(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize })">&raquo;</a>
        }
    </div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <script>
        var deleteButtons = document.querySelectorAll('.delete-button');
        deleteButtons.forEach(function (button) {
            button.addEventListener('click', function () {
                var modalId = button.getAttribute('data-target').replace('#', '');
                var modal = document.getElementById(modalId);
                modal.style.display = 'flex';
            });
        });

        var closeButtons = document.querySelectorAll('.close');
        closeButtons.forEach(function (button) {
            button.addEventListener('click', function () {
                var modal = button.closest('.modal');
                modal.style.display = 'none';
            });
        });
    </script>
}
else
{
    <p>Không có dữ liệu được thêm vào</p>
}