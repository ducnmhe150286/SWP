@model User
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1>@Model.FirstName @Model.LastName</h1></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                <h6>Upload a different photo...</h6>
                <input type="file" class="text-center center-block file-upload">
            </div></hr><br>

        </div>
        <div class="col-sm-9">

            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" asp-controller="ProfileUsers" asp-action="UpdateProfile" method="post" id="registrationForm">
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="firstName"><h4>Họ</h4></label>
                                <input type="text" value="@Model.FirstName" class="form-control" name="firstName" id="first_name" placeholder="Họ" title="Nhập họ của bạn.">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="lastName"><h4>Tên</h4></label>
                                <input type="text" value="@Model.LastName" class="form-control" name="lastName" id="last_name" placeholder="Tên" title="Nhập tên của bạn.">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="phoneNumber"><h4>Số điện thoại</h4></label>
                                <input type="text" value="@Model.PhoneNumber" class="form-control" name="phoneNumber" id="phone" placeholder="nhập số điện thoại" title="Nhập số điện thoại.">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label><h4>Giới tính</h4></label><br>
                                <label class="radio-inline">
                                    <input type="radio" name="gender" value="true" @(Model.Gender == true ? "checked" : "")> Nam
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="gender" value="false"@(Model.Gender == false ? "checked" : "")> Nữ
                                </label>
                                
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email"><h4>Email</h4></label>
                                <input type="email" value="@Model.Email" class="form-control" name="email" id="email" placeholder="you@email.com" title="nhập email của bạn." readonly>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="address"><h4>Địa chị</h4></label>
                                <input type="text" value="@Model.Address" class="form-control" name="address" id="address" placeholder="Nhập địa chỉ vào đây" title="Nhập địa chỉ">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Lưu</button>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Đổi mật khẩu</button>
                            </div>
                        </div>
                    </form>

                    <hr>

                </div><!--/tab-pane-->


            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->
