@{
}
@model SWP.Models.Size

<h2>THÊM MỚI SIZE</h2>
@using (Html.BeginForm("AddSize", "Size", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.SizeName)
        @Html.TextBoxFor(model => model.SizeName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SizeName, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Thêm mới</button>
}