@model SWP.Dao.OrderDetailViewModel
<style>
    .product-category-heading {
        color: #333;
        font-family: 'Arial', sans-serif;
        font-size: 24px;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 20px;
        border-bottom: 2px solid #333;
        padding-bottom: 5px;
    }

    .custom-container {
        text-align: right;
        margin-top: 10px;
    }

        .custom-container a {
            color: #fff;
            background-color: #007bff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

            .custom-container a:hover {
                background-color: #0056b3;
            }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .btn-group {
        display: flex;
        gap: 5px;
    }

    .btn {
        padding: 8px 12px;
        cursor: pointer;
        border: none;
        border-radius: 4px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #212529;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
    }

    .close {
        cursor: pointer;
    }

    .pagination {
        display: inline-block;
        margin-top: 20px;
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border: 1px solid #ddd;
            font-size: 16px;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
                border: 1px solid #4CAF50;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }
</style>


<h2 class="product-category-heading">CHI TIẾT ĐƠN ĐẶT HÀNG</h2>
<table>
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Tên Khách Hàng</th>
            <th>Số Điện Thoại</th>
            <th>Địa Chỉ</th>
            <th>Ngày Tạo</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.OrderId</td>
            <td>@Model.CustomerName</td>
            <td>@Model.PhoneNumber</td>
            <td>@Model.ShipAddress</td>
            <td>@Model.OrderDate</td>
            <td>@Model.TotalAmount</td>
            <td>
                @if (Model.Status == 0)
                {
                    <p>Chờ xác nhận</p>
                }
                else
                {
                    <p>Không Hoạt Động</p>
                }
            </td>
        </tr>
    </tbody>
</table>
<h3 class="product-category-heading">CHI TIẾT SẢN PHẨM</h3>
<table>
    <thead>
        <tr>
            <th>Ảnh sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Giá sản phẩm</th>
            <th>Số lượng</th>
            <th>Màu sắc</th>
            <th>Kích thước</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productDetail in Model.OrderProductDetails)
        {
            <tr>
                <td>
                    @foreach (var image in productDetail.ProductImages)
                    {
                        <img src="~/Images/@image" alt="Product Image" width="100" height="100" />
                        
                    }
                </td>
                <td>@productDetail.ProductName</td>
                <td>@productDetail.Price</td>
                <td>@productDetail.Quantity</td>
                <td>@productDetail.ColorName</td>
                <td>@productDetail.SizeName</td>
                <td>@(productDetail.Price * productDetail.Quantity)</td>
            </tr>
        }
    </tbody>
</table>
