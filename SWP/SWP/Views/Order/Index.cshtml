@model List<Order>

<style>
    .product-category-heading {
        color: #333; /* Màu chữ */
        font-family: 'Arial', sans-serif; /* Font chữ */
        font-size: 24px; /* Kích thước chữ */
        font-weight: bold; /* Độ đậm của chữ */
        text-transform: uppercase; /* Chuyển chữ thành chữ in hoa */
        margin-bottom: 20px; /* Khoảng cách dưới */
        border-bottom: 2px solid #333; /* Đường gạch chân */
        padding-bottom: 5px; /* Khoảng cách từ chữ đến đường gạch chân */
    }
    /* Reset CSS */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Style for the heading */
    h2 {
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    /* Style for the table */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    /* Style for odd rows */
    tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    /* Style for links in the last column */
    td a {
        display: inline-block;
        padding: 6px 12px;
        text-decoration: none;
        background-color: #4caf50;
        color: #fff;
        border-radius: 4px;
        margin-right: 5px;
    }

        /* Hover effect for links */
        td a:hover {
            background-color: #45a049;
        }
</style>

<h2 class="product-category-heading">DANH SÁCH ĐƠN HÀNG</h2>
<table>
    <thead>
        <tr>

            <th>Mã Đơn Hàng</th>
            <th>Tên Khách Hàng</th>
            <th>Số Điện Thoại</th>
            <th>Địa Chỉ</th>
            <th>Ngày Tạo</th>
            <th>Trạng Thái</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerName</td>
                <td>@order.PhoneNumber</td>
                <td>@order.ShipAddress</td>
                <td>@(order.OrderDate.HasValue ? order.OrderDate.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                <td>
                    @if (order.Status == 0)
                    {
                        <p>Chờ xác nhận</p>
                    }
                    else
                    {
                        <p>Không Hoạt Động</p>
                    }
                </td>



                <td>
                    <a href="@Url.Action("ViewDetail", "Order", new { id = order.OrderId })">Xem chi tiết</a>
                    <a href="@Url.Action("Edit", "Order", new { id = order.OrderId })">Cập nhật</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<style>
    .pagination {
        display: inline-block;
        margin-top: 20px; /* Điều chỉnh khoảng cách giữa bảng và nút phân trang */
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border: 1px solid #ddd;
            font-size: 16px; /* Điều chỉnh kích thước chữ */
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
                border: 1px solid #4CAF50;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }
</style>

<!-- Nút phân trang -->
<div class="pagination">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize })">&laquo;</a>
    }

    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })" class="@(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize })">&raquo;</a>
    }
</div>