@using SWP.Dao
@model List<OrderProductDetailViewModel>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }


        h2 {
            color: #333;
            text-align: center;
        }

        .status-buttons {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .status-btn {
            background-color: #f0f0f0;
            color: #333;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            margin: 0 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .status-btn:hover {
                background-color: #e0e0e0;
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

         td{
            border: 1px solid #ddd;

        }

         td {
            padding: 15px;
            text-align: left;
            width: 50%;
            
        }

        .light {
            color: #888;
        }

        .center {
            text-align: center;
        }

        .back-btn {
            display: block;
            width: 100px;
            margin: 20px auto;
            padding: 10px;
            text-align: center;
            background-color: #ff6600; /* Màu cam */
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .back-btn:hover {
                background-color: #ff4d00; /* Màu cam nhạt khi hover */
            }

        .Product-info{
           
        }
    </style>
</head>
<body>

    <div>
        
        <div class="status-buttons">
            <button class="status-btn" data-status="All">Tất cả</button>
            <button class="status-btn" data-status="PendingConfirmation">Chờ xác nhận</button>
            <button class="status-btn" data-status="Confirmed">Đã xác nhận</button>
            <button class="status-btn" data-status="InTransit">Đang vận chuyển</button>
            <button class="status-btn" data-status="Delivered">Giao hàng thành công</button>
            <button class="status-btn" data-status="FailedDelivery">Giao hàng không thành công</button>
            <button class="status-btn" data-status="Cancelled">Đơn hàng đã hủy</button>
        </div>
        <div class="Product-info">
        @if (Model.Count > 0)
        {
            <table>
                @foreach (var orderGroup in Model.GroupBy(x => x.OrderId).OrderByDescending(g => g.First().OrderId))
                {
                    <tbody>
                            <tr>
                                <td colspan="2" style="background-color: #EEEEEE; padding: 10px; font-weight: bold; font-size: 18px;" colspan="2">Đơn hàng: @orderGroup.Key</td>
                            </tr>
                        @foreach (var productDetail in orderGroup)
                        {
                            <tr>
                                    <td style="width: 35%;">
                                    @foreach (var image in productDetail.ProductImages)
                                    {
                                        <a href="@Url.Action("ProductDetail", "Order", new { orderId = productDetail.OrderId })">
                                            <img src="~/Images/@image" alt="Product Image" width="100" height="100" />
                                        </a>
                                    }
                                </td>
                                    <td style="width: 60%;">
                                    <strong>@productDetail.ProductName</strong><br />
                                    <span class="light">Mầu sắc: @productDetail.ColorName</span><br />
                                    <span class="light">Kích thước: @productDetail.SizeName</span><br />
                                    <span class="light">Số lượng: @productDetail.Quantity</span><br />
                                    <span class="light">giá: <span>@string.Format("{0:#,##0 đ}", productDetail.Price)</span></span><br /> <!-- Định dạng tiền Việt Nam đồng -->
                                    
                                </td>
                            </tr>
                        }
                            <tr>
                                <td colspan="2" style="text-align: right; padding: 10px; font-weight: bold; font-size: 20px;" colspan="2">Thành tiền: <span style="color: orange; font-size: 22px;">@string.Format("{0:#,##0 đ}", orderGroup.Sum(p => p.Price * p.Quantity))</span></td>
                            </tr>
                            <tr style="height: 20px;  padding: 10px;" ;></tr> <!-- Hàng trống giữa các đơn hàng -->
                    </tbody>
                }
            </table>
        }
        else
        {
            <p>Khách hàng chưa đặt hàng sản phẩm nào.</p>
        }
        </div>

        <a href="javascript:history.go(-1)" class="back-btn">Quay lại</a>
    </div>

</body>
</html>






