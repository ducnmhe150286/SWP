@model SWP.Models.Blog

@{
    ViewData["Title"] = "Blog Post";
}

<div class="blog-post">
    <h1>@Model.Title</h1>
    <p class="blog-meta"><span>@Model.CreateDate.Value.ToString("yyyy/MM/dd")</span></p>
    <p class="blog-description">@Html.Raw(Model.Description)</p>
</div>
<div class="form-group">
    <a asp-action="Index" asp-controller="Blog">Danh sách blog</a>
</div>
<style>
    ..container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .blog-post {
        margin-bottom: 30px;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
    }

    .blog-meta {
        color: #777;
        font-size: 14px;
        margin-bottom: 10px;
    }

        .blog-meta span {
            font-weight: bold;
            color: #333;
        }

    .blog-description {
    display: block;
    text-align: center; /* Đảm bảo các hình ảnh được căn giữa theo chiều ngang */
}


    /* Đảm bảo các ảnh có độ rộng bằng nhau và căn chỉnh nội dung */
    img {
        display: block; /* Để ngăn các ảnh bị lệch dòng */
        max-width: 100%; /* Đảm bảo rằng ảnh không vượt quá chiều rộng của blog-post */
        height: auto;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    /* Căn chỉnh tiêu đề và thẻ span chứa ngày đăng bài */
    .blog-post > h1,
    .blog-meta > span {
        margin: 0; /* Loại bỏ margin mặc định */
    }

    /* Đảm bảo rằng các blog-post có chiều cao bằng nhau */
    .blog-post {
        display: flex;
        flex-direction: column;
    }

        /* Căn chỉnh các thành phần bên trong blog-post */
        .blog-post > * {
            flex: 1; /* Chia sẻ không gian theo chiều dọc */
        }

            /* Đảm bảo rằng nội dung không bị căn lề sang trái */
            .blog-post > *:not(img) {
                text-align: justify;
            }

    .blog-description img {
        display: block; /* Để ngăn các ảnh bị lệch dòng */
        margin: 0 auto; /* Để căn giữa ảnh theo chiều ngang */
        max-width: 100%; /* Đảm bảo rằng ảnh không vượt quá chiều rộng của phần mô tả */
        border-radius: 8px;
        margin-bottom: 10px;
    }

</style>
